algoritmo "Exercicio3"
var
    num1, num2: inteiro

inicio
      Escreva("Digite o número:")
      Leia(num1)
      Escreva("Digite o número:")
      Leia(num2)
      se num1 > num2 entao
         Escreva("diferença do maior valor pelo menor:", (num1 - num2))
      senao
           Escreva("diferença do maior valor pelo menor:", (num2 - num1))
      fimse
fimalgoritmo

